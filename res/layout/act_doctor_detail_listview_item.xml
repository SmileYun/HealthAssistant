<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:layout_width="56dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_chat_doctor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.87"
        android:paddingTop="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/doctor_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马某某"
                android:textSize="14sp"
                android:textColor="#3c9400"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctor_detail_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="主任医生"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/doctor_detail_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
             android:paddingRight="8dp"
            android:text="山西balabalabala...."
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="擅长： "
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctor_detail_good_at"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.93"
         android:paddingTop="8dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/doctor_detail_paint_img_count"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_item_man" />

        <TextView
            android:id="@+id/doctor_detail_paint_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="321"
            android:textSize="10sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="患者数"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>