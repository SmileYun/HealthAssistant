<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/more_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.07"
            android:gravity="center"
            android:background="@drawable/listview_item_btn_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cct_tab_famous_choise_hosp"
                 android:gravity="center_vertical"
                android:layout_width="wrap_content"
                
                android:layout_height="@dimen/widget_height40"
                android:textSize="@dimen/text_size_16"
                android:text="请选择医院" />
        </LinearLayout>
        
        <LinearLayout
           android:layout_width="0dp"
            android:layout_weight="1"
             android:gravity="center"
              android:background="@drawable/listview_item_btn_border"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cct_tab_famous_choise_keshi"
                 android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_height40"
                android:textSize="@dimen/text_size_16"
                android:text="请选择科室" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/ccl_tab_famous_listview_famous_doctor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        
        android:listSelector="@null" />

</LinearLayout>