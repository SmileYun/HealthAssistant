<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_hospital_register" />

    <EditText
        android:id="@+id/cce_login_reg_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left7"
        android:layout_marginRight="@dimen/margin_left7"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="账号及注册手机号"
        android:padding="8dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/cce_login_reg_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left7"
        android:layout_marginRight="@dimen/margin_left7"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="密码"
        android:padding="8dp" />

    <EditText
        android:id="@+id/cce_login_reg_mm_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left7"
        android:layout_marginRight="@dimen/margin_left7"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="重复密码"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/cce_login_reg_verified"
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_height45"
            android:layout_marginLeft="@dimen/margin_left7"
            android:layout_marginRight="@dimen/margin_left7"
            android:layout_weight="1"
            android:ems="7"
            android:hint="验证码"
            android:padding="8dp" />

        <Button
            android:id="@+id/ccb_login_get_verified"
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_height45"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:linksClickable="true"
            android:singleLine="true"
            android:text="获取验证码"
            android:typeface="monospace" />
    </LinearLayout>

    <Button
        android:id="@+id/ccb_login_reg_reg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/widget_height50"
        android:layout_marginLeft="@dimen/margin_left7"
        android:layout_marginRight="@dimen/margin_left7"
        android:layout_marginTop="25dp"
        android:background="#037800"
        android:text="注册"
        android:textColor="#ffffff" />

</LinearLayout>