<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/doctor_fragment_title_shadow" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/doctor_fragment_title_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tExp_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="结膜炎"
                android:textColor="#5053c8"
                android:textSize="@dimen/fontsize16" />

            <RatingBar
                android:id="@+id/rExp_01"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="29dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scaleType="centerCrop"
            android:src="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tExp_content_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:text="服务态度好治疗效果佳....."
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/fontsize12" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tExp_time_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:text="2014-09-24 就诊后1天"
                android:textColor="@android:color/background_dark"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tExp_name_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="18dp"
                android:padding="5dp"
                android:text="王**"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/fontsize12" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>