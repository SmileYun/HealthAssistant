<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_hospital_register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#d3ffaf"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="30dp"
            android:background="@drawable/listview_item_add_border" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:src="@drawable/item_image_select" />

            <EditText
                android:layout_width="190dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/listview_item_edittext_border"
                android:hint="医院名、医生名、疾病名"
                android:src="@drawable/ic_launcher"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4cbc00"
                android:gravity="center"
                android:text="搜索"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.72" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/guahao_item00"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/listview_item_add_border"
                    android:clickable="true"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="128dp"
                        android:gravity="center"
                        android:text="重庆市" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_city"
                        android:layout_marginRight="17dp"
                        android:background="#00000000"
                        android:src="@drawable/vote_news_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/guahao_item01"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/listview_item_add_border"
                    android:clickable="true"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/hosp_img01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:background="#00000000"
                        android:src="@drawable/item_image1" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/hosp_img01"
                        android:layout_marginLeft="28dp"
                        android:layout_toRightOf="@+id/hosp_img01"
                        android:gravity="center_vertical"
                        android:text="@string/guahao_item01" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/textView1"
                        android:layout_marginRight="17dp"
                        android:background="#00000000"
                        android:src="@drawable/vote_news_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/guahao_item02"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/listview_item_add_border"
                    android:clickable="true"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/hosp_img02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:background="#00000000"
                        android:src="@drawable/item_image2" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/hosp_img02"
                        android:layout_marginLeft="28dp"
                        android:layout_toRightOf="@+id/hosp_img02"
                        android:gravity="center_vertical"
                        android:text="@string/guahao_item02" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/textView2"
                        android:layout_marginRight="17dp"
                        android:background="#00000000"
                        android:src="@drawable/vote_news_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                
                android:layout_marginTop="30dp"
                android:background="@drawable/healimage"
                android:clickable="true"
               
                android:gravity="bottom" >
            </RelativeLayout>
        </TableLayout>
    </LinearLayout>

</LinearLayout>