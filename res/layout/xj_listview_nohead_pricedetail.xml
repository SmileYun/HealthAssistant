<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/xj_head_common" />

    <ListView
        android:id="@+id/hjlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:text="合计：￥39.5" />
<Button
        android:id="@+id/ccb_login"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/widget_height50"
        android:layout_marginLeft="@dimen/margin_left7"
        android:layout_marginRight="@dimen/margin_left7"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="#037800"
        android:text="付费" />

</LinearLayout>