<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#4cbc00"
            android:gravity="center" >

            <ImageView
                android:id="@+id/more_return_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/undo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="25"
            android:background="#4cbc00"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/more_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70dp"
                android:text="关于我们"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="40dp" >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/more_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="掌中医院"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/app_manage_context"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
              <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="联系方式"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
              <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="邮箱：29302507@qq.com"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
               <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="用户反馈群： 8044030201"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
                <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="掌中医院服务网"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
                  <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="版本：1.0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>