<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    android:paddingBottom="10.0dip" >

    <include
        android:id="@+id/include"
        layout="@layout/xj_head_common" />

    <ScrollView
        style="@style/sv"
        android:layout_above="@+id/tv_testshow_ruhegoumai"
        android:layout_below="@+id/include" >

        <TextView
            android:id="@+id/tv_content"
            style="@style/tvBody_1.8"
            android:layout_width="fill_parent"
            android:layout_marginTop="10.0dip"
            android:drawablePadding="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" />
    </ScrollView>

     

    <RelativeLayout
        android:id="@+id/rl_zhuangtai"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/frame_shape_garyline"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv1"
            style="@style/tvBody"
            android:layout_height="30.0dip"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.0" />

        <TextView
            android:id="@+id/tv2"
            style="@style/tvBody_textGreen"
            android:layout_height="35.0dip"
            android:layout_alignLeft="@+id/tv1"
            android:layout_below="@id/tv1"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv3"
            style="@style/tvBody_textGreen"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_alignBaseline="@id/tv2"
            android:layout_alignBottom="@+id/tv2"
            android:layout_alignParentRight="true"
            android:drawablePadding="10.0dip"
            android:drawableRight="@drawable/icon_arrow_right_small"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.0" />
    </RelativeLayout>

</RelativeLayout>